  mb 10em
  img
    w 100%
    h a


.contact-title
  ta cen
  fz 1.5em
  cc #aaa
  lh 1.5
  letter-spacing 4px
  mb 4em


.contact-1
  pad 4em 0
  mb 1em


.contact-1-row
  mb 5em


.contact-1-title-1
.contact-2-title-1
.contact-2-title-3
  fz 1.6em
  mb 0.5em
