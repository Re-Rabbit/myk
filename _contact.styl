.contact-1-pic
  ta r

.contact-1-title-2
  fz 1.2em
  cc #aaa
  pl 60px


.contact-2
  mt 6em

.contact-2-pic
  pos abso
  l 50%
  t 0
  ml -(107 / 2) - 4px
  z 1
  bg #fff
  img
    dis bl
    bd 0

.contact-2-container
  pos rela

  &:after
    ctx " "
    dis ib
    pos abso
    l 50%
    t 0
    size 1px 100%
    bg #888
    ml -0.5px

.contact-2-title-2
  fz 1em
  cc #888


.contact-2-list
  pos rela
  h 180px

.contact-2-l
.contact-2-r
  ta cen
  pad 1em 0
  w 50%

.contact-2-l
  ml -4em
  fill l, false, 0

.contact-2-r
  mr -4em
  fill r, false, 0


.contact2-circle-row
  mb 0.5em
  ta cen

.contact2-circle-1
.contact2-circle-2
.contact2-circle-3
